class Time:
    """ Blueprint for a Time object"""
    def __init__(self):
        self.hour = 0
        self.minute = 0
        self.second = 0

    def set_time(self, hour, minute, second):
        self.hour = hour
        self.minute = minute
        self.second = second

    def print_time(self):
        print (self.hour, ":", self.minute, ":", self.second)
myTime1 = Time()
myTime2 = Time()
myTime3 = Time()
myTime2.set_time(1, 2, 3)
myTime3.set_time(13, 7, 19)

print ("My 3 time objects are now being stored:")
myTime1.print_time()
myTime2.print_time()
myTime3.print_time()
